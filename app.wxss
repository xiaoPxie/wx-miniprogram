/**app.wxss**/
@import "styles/iconfont.wxss";

/* 重置 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

page {
  --themeColor: #eb4450;
  /* 假设设计稿375px
    存在 1px = 2rpx
    一般 14px = 28rpx； 
    */
  font-size: 28rpx;
}

image {
  width: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
