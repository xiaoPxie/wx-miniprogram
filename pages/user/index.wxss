page {
  background: #edece8;
  color: #666;
}
/* 顶部图片 */
.login_btn {
  width: 90%;
  padding: 15rpx;
  border: 1rpx solid #666;
  border-radius: 10rpx;
  text-align: center;
}
.user_info_wrap {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 450rpx;
  background: #ddeecc;
  overflow: hidden;
}
.user_info_wrap .bg_img {
  filter: blur(10rpx);
  -webkit-filter: blur(10rpx);
  transform: scale(1.1, 1.1);
}
.user_info_wrap .user_info {
  position: absolute;
  color: #fff;
}
.user_info_wrap .user_img {
  padding-bottom: 80rpx;
}
.user_info_wrap .user_img image {
  border-radius: 50%;
}

/* 历史足迹 */
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  top: -60rpx;
  left: 50%;
  width: 90%;
  transform: translateX(-50%);
  background: #fff;
}
.history_wrap {
  display: flex;
  padding: 10rpx;
  text-align: center;
  border-bottom: 15rpx solid #edece8;
}
.history_wrap .history_item {
  flex: 1;
}
.history_wrap .history_item .history_num {
  color: var(--themeColor);
}

/* 订单 */
.order_wrap {
  
}
.order_wrap .order_title {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}
.order_wrap .order_main {
  display: flex;
  padding: 10rpx;
  border-bottom: 15rpx solid #edece8;
}
.order_main .order_item {
  flex: 1;
  text-align: center;
}
.order_main .order_item .iconfont {
  color: var(--themeColor);
  font-size: 50rpx;
}

/* 收货地址管理 */
.address_wrap {
  position: relative;
  width: 100%;
  padding: 20rpx 15rpx 20rpx;
  border-bottom: 15rpx solid #edece8;
}

/* 其他面板 */
.other_wrap {

}
.other_wrap .other_item {
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  border-bottom: 5rpx solid #edece8;
} 
.other_wrap .other_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.other_wrap .other_item navigator {
  width: 100%;
  height: 100%;
}
.other_wrap .tuijian {
  padding: 20rpx 15rpx 20rpx;
  border-top: 10rpx solid #edece8;
}
